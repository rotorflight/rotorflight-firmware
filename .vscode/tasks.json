{
    "version": "2.0.0",
    "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated"
    },
    "tasks": [
        {
            "label": "Build STM32F7X2",
            "type": "shell",
            "command": "make",
            "args": [
                "TARGET=STM32F7X2"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
        },
        {
            "label": "Debug Build STM32F7X2",
            "type": "shell",
            "command": "make",
            "args": [
                "TARGET=STM32F7X2",
                "DEBUG=GDB"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": ["$gcc"],
        },
        {
            "label": "Build unified",
            "type": "shell",
            "command": "make",
            "args": [
                "unified"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": ["$gcc"],
        },
    ]
}

